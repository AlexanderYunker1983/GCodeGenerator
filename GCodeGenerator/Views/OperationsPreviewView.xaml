<UserControl x:Class="GCodeGenerator.Views.OperationsPreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1200" d:DesignHeight="220">
    <Border BorderBrush="#FFCCCCCC" BorderThickness="1" Background="White">
        <Canvas x:Name="PreviewCanvas"
                Background="White"
                ClipToBounds="True"
                MouseWheel="PreviewCanvas_OnMouseWheel"
                MouseDown="PreviewCanvas_OnMouseDown"
                MouseMove="PreviewCanvas_OnMouseMove"
                MouseUp="PreviewCanvas_OnMouseUp"
                MouseLeave="PreviewCanvas_OnMouseLeave"
                PreviewMouseLeftButtonDown="PreviewCanvas_OnMouseLeftButtonDown"
                SizeChanged="PreviewCanvas_OnSizeChanged"/>
    </Border>
</UserControl>



<Window x:Class="GCodeGenerator.Views.PreviewView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GCodeGenerator.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:PreviewViewModel}"
        Title="{Binding DisplayName}"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Viewport3D x:Name="Viewport" 
                    MouseWheel="Viewport_MouseWheel"
                    MouseDown="Viewport_MouseDown"
                    MouseMove="Viewport_MouseMove"
                    MouseUp="Viewport_MouseUp"
                    MouseLeave="Viewport_MouseLeave">
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="Camera" Position="50,50,50" LookDirection="-1,-1,-1" UpDirection="0,0,1" 
                                   FieldOfView="45"/>
            </Viewport3D.Camera>
            
            <ModelVisual3D x:Name="LightingModel">
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <!-- Lighting -->
                        <AmbientLight Color="White" />
                        <DirectionalLight Color="White" Direction="-1,-1,-1" />
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
            
            <ModelVisual3D x:Name="TrajectoryVisual">
                <ModelVisual3D.Content>
                    <Model3DGroup/>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
    </Grid>
</Window>


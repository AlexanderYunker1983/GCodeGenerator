<UserControl x:Class="GCodeGenerator.Views.Pocket.PocketOperationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:GCodeGenerator.ViewModels.Pocket"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:PocketOperationsViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <WrapPanel Margin="4" ItemWidth="120" ItemHeight="150">
                <Button Command="{Binding AddPocketRectangleCommand}" Margin="0,0,8,8">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentControl Content="{StaticResource PocketRectangle}" 
                                    MaxWidth="64" MaxHeight="64"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,4"/>
                        <TextBlock Text="{DataBinding '$i18n.PocketRectangleName'}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="4,0,4,0"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding AddPocketCircleCommand}" Margin="0,0,8,8">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentControl Content="{StaticResource PocketCircle}" 
                                    MaxWidth="64" MaxHeight="64"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,4"/>
                        <TextBlock Text="{DataBinding '$i18n.PocketCircleName'}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="4,0,4,0"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding AddPocketEllipseCommand}" Margin="0,0,8,8">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentControl Content="{StaticResource PocketEllipse}" 
                                    MaxWidth="64" MaxHeight="64"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,4"/>
                        <TextBlock Text="{DataBinding '$i18n.PocketEllipseName'}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="4,0,4,0"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding AddPocketDxfCommand}" Margin="0,0,8,8">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{DataBinding '$i18n.PocketDxfName'}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="4,0,4,0"/>
                    </StackPanel>
                </Button>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>



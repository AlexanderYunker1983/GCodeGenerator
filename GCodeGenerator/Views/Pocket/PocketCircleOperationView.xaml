<Window x:Class="GCodeGenerator.Views.Pocket.PocketCircleOperationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GCodeGenerator.ViewModels.Pocket"
        xmlns:models="clr-namespace:GCodeGenerator.Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:PocketCircleOperationViewModel}"
        Title="{Binding DisplayName}"
        Width="780" Height="560"
        MinWidth="760" MinHeight="520"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Направление -->
        <GroupBox Header="{DataBinding '$i18n.DirectionHeader'}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
            <StackPanel Margin="8">
                <RadioButton Content="{DataBinding '$i18n.DirectionClockwise'}" GroupName="Direction"
                            IsChecked="{Binding Direction, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:MillingDirection.Clockwise}}"
                            Margin="0,0,0,4"/>
                <RadioButton Content="{DataBinding '$i18n.DirectionCounterClockwise'}" GroupName="Direction"
                            IsChecked="{Binding Direction, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:MillingDirection.CounterClockwise}}"/>
            </StackPanel>
        </GroupBox>

        <!-- Размеры -->
        <GroupBox Header="{DataBinding '$i18n.CircleParametersHeader'}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Text="{DataBinding '$i18n.CenterX'}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBox Grid.Column="1" Text="{Binding CenterX, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                <TextBlock Grid.Column="3" Text="{DataBinding '$i18n.CenterY'}" VerticalAlignment="Center" Margin="8,0,4,0"/>
                <TextBox Grid.Column="4" Text="{Binding CenterY, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="{DataBinding '$i18n.Radius'}" VerticalAlignment="Center" Margin="0,8,4,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Radius, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,4,0"/>
            </Grid>
        </GroupBox>

        <!-- Параметры резания -->
        <GroupBox Header="{DataBinding '$i18n.CuttingParametersHeader'}" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
            <StackPanel Margin="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{DataBinding '$i18n.TotalDepthLabel'}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox Grid.Column="1" Text="{Binding TotalDepth, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                    <TextBlock Grid.Column="3" Text="{DataBinding '$i18n.StepDepthLabel'}" VerticalAlignment="Center" Margin="8,0,4,0"/>
                    <TextBox Grid.Column="4" Text="{Binding StepDepth, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                    <TextBlock Grid.Column="6" Text="{DataBinding '$i18n.ToolDiameter'}" VerticalAlignment="Center" Margin="8,0,4,0"/>
                    <TextBox Grid.Column="7" Text="{Binding ToolDiameter, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="{DataBinding '$i18n.WallTaperAngleDeg'}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Width="120" Text="{Binding WallTaperAngleDeg, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Черновая / чистовая обработка с припуском -->
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <CheckBox Margin="0,0,16,0"
                              IsChecked="{Binding IsRoughingEnabled}"
                              Content="{DataBinding '$i18n.PocketRoughing'}"/>
                    <CheckBox IsChecked="{Binding IsFinishingEnabled}"
                              Content="{DataBinding '$i18n.PocketFinishing'}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="{DataBinding '$i18n.PocketFinishAllowance'}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Width="80" Text="{Binding FinishAllowance, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <GroupBox Header="{DataBinding '$i18n.PocketFinishingModeHeader'}" Margin="0,8,0,0">
                    <GroupBox.Style>
                        <Style TargetType="GroupBox">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFinishingEnabled}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </GroupBox.Style>
                    <StackPanel Margin="8">
                        <RadioButton Content="{DataBinding '$i18n.PocketFinishingWalls'}"
                                     GroupName="FinishingMode"
                                     IsChecked="{Binding FinishingMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:PocketFinishingMode.Walls}}"
                                     Margin="0,0,0,4"/>
                        <RadioButton Content="{DataBinding '$i18n.PocketFinishingBottom'}"
                                     GroupName="FinishingMode"
                                     IsChecked="{Binding FinishingMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:PocketFinishingMode.Bottom}}"
                                     Margin="0,0,0,4"/>
                        <RadioButton Content="{DataBinding '$i18n.PocketFinishingAll'}"
                                     GroupName="FinishingMode"
                                     IsChecked="{Binding FinishingMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:PocketFinishingMode.All}}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </GroupBox>

        <!-- Позиционирование и Z -->
        <GroupBox Header="{DataBinding '$i18n.PositioningHeader'}" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{DataBinding '$i18n.ContourHeightZ'}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBox Grid.Column="1" Text="{Binding ContourHeight, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                <TextBlock Grid.Column="3" Text="{DataBinding '$i18n.Decimals'}" VerticalAlignment="Center" Margin="8,0,4,0"/>
                <TextBox Grid.Column="4" Text="{Binding Decimals, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </GroupBox>

        <!-- Подачи -->
        <GroupBox Header="{DataBinding '$i18n.FeedParametersHeader'}" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,8">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{DataBinding '$i18n.FeedXYRapid'}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FeedXYRapid, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="{DataBinding '$i18n.FeedXYWork'}" VerticalAlignment="Center" Margin="8,0,4,0"/>
                <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding FeedXYWork, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="{DataBinding '$i18n.FeedZRapid'}" VerticalAlignment="Center" Margin="0,8,4,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FeedZRapid, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,4,0"/>
                <TextBlock Grid.Row="1" Grid.Column="3" Text="{DataBinding '$i18n.FeedZWork'}" VerticalAlignment="Center" Margin="8,8,4,0"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding FeedZWork, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,4,0"/>
            </Grid>
        </GroupBox>

        <!-- Стратегия -->
        <GroupBox Header="{DataBinding '$i18n.CuttingStrategy'}" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{DataBinding '$i18n.PocketStrategy'}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4"
                         SelectedValue="{Binding PocketStrategy, Mode=TwoWay}"
                         SelectedValuePath="Tag"
                         Margin="0,0,0,8">
                    <ComboBoxItem Content="{DataBinding '$i18n.PocketStrategySpiral'}" Tag="{x:Static models:PocketStrategy.Spiral}"/>
                    <ComboBoxItem Content="{DataBinding '$i18n.PocketStrategyConcentric'}" Tag="{x:Static models:PocketStrategy.Concentric}"/>
                    <ComboBoxItem Content="{DataBinding '$i18n.PocketStrategyRadial'}" Tag="{x:Static models:PocketStrategy.Radial}"/>
                    <ComboBoxItem Content="{DataBinding '$i18n.PocketStrategyZigZag'}" Tag="{x:Static models:PocketStrategy.ZigZag}"/>
                    <ComboBoxItem Content="{DataBinding '$i18n.PocketStrategyLines'}" Tag="{x:Static models:PocketStrategy.Lines}"/>
                </ComboBox>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="{DataBinding '$i18n.StepPercentOfTool'}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding StepPercentOfTool, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                <TextBlock Grid.Row="1" Grid.Column="3" Text="{DataBinding '$i18n.SafeZHeight'}" VerticalAlignment="Center" Margin="8,0,4,0"/>
                <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding SafeZHeight, UpdateSourceTrigger=PropertyChanged}"/>
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Orientation="Horizontal" Margin="0,6,0,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLinesOrZigZagStrategy}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="{DataBinding '$i18n.LineAngleDegToX'}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox Width="80" Text="{Binding LineAngleDeg, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
    </ScrollViewer>
</Window>



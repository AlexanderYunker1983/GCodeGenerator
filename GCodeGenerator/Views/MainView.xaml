<Window x:Class="GCodeGenerator.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GCodeGenerator.ViewModels"
        xmlns:views="clr-namespace:GCodeGenerator.Views"
        xmlns:drillViews="clr-namespace:GCodeGenerator.Views.Drill"
        xmlns:pocketMillViews="clr-namespace:GCodeGenerator.Views.PocketMill"
        xmlns:pocketViews="clr-namespace:GCodeGenerator.Views.Pocket"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
        Title="{DataBinding DisplayName}"
        Height="600" Width="1200"
        MinHeight="600" MinWidth="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <!-- Left: operation type selector takes all free width -->
            <ColumnDefinition Width="*" />
            <!-- Middle: operations list has fixed comfortable width -->
            <ColumnDefinition Width="350" />
            <!-- Right: G-code preview starts at 400px and is resizable via splitter -->
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,3,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Padding="3" Margin="0,0,3,0"
                    Command="{Binding NewProgramCommand}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Image Source="{StaticResource NewFileImage}" Width="24" Height="24"/>
            </Button>

            <Button Grid.Column="1" Padding="3" Margin="0,0,3,0"
                    Command="{Binding OpenProjectCommand}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Image Source="{StaticResource OpenFileImage}" Width="24" Height="24"/>
            </Button>

            <Button Grid.Column="2" Padding="3" Margin="0,0,3,0"
                    Command="{Binding SaveProjectCommand}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Image Source="{StaticResource SaveFileImage}" Width="24" Height="24"/>
            </Button>

            <Button Command="{Binding OpenSettingsCommand}"
                    Grid.Column="4" Padding="3"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    ToolTip="{DataBinding '$i18n.Settings'}"
                    ToolTipService.BetweenShowDelay="0"
                    ToolTipService.InitialShowDelay="0"
                    ToolTipService.ShowOnDisabled="True">
                <Image Source="{StaticResource SettingsImage}" Width="24" Height="24"/>
            </Button>
        </Grid>
        
        <!-- Left side: operation type selector inside TabControl -->
        <mah:MetroTabControl Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Margin="0,0,8,0">
            <TabItem Header="{DataBinding '$i18n.DrillingTab'}">
                <drillViews:DrillOperationsView DataContext="{Binding DrillOperations}"/>
            </TabItem>
            <TabItem Header="{DataBinding '$i18n.ProfileTab'}">
                <pocketMillViews:ProfileMillingOperationsView DataContext="{Binding ProfileMillingOperations}"/>
            </TabItem>
            <TabItem Header="{DataBinding '$i18n.PocketTab'}">
                <pocketViews:PocketOperationsView DataContext="{Binding PocketOperations}"/>
            </TabItem>
        </mah:MetroTabControl>

        <!-- Top-right: operations list controls + generate & settings -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button VerticalAlignment="Center" Grid.Column="0"
                    Command="{Binding MoveOperationUpCommand}" Width="80" Margin="0,0,6,0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{StaticResource UpImage}" Width="16" Height="16"/>
                    <TextBlock Text="{DataBinding '$i18n.MoveUp'}"/>
                </StackPanel>
            </Button>
            <Button VerticalAlignment="Center" Grid.Column="1"
                    Command="{Binding MoveOperationDownCommand}" Width="80">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{StaticResource DownImage}" Width="16" Height="16"/>
                    <TextBlock Text="{DataBinding '$i18n.MoveDown'}"/>
                </StackPanel>
            </Button>
            <Button VerticalAlignment="Center"
                    Grid.Column="3" Margin="0,0,6,0"
                    Command="{Binding RemoveOperationCommand}" Width="80">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{StaticResource DeleteImage}" Width="16" Height="16"/>
                    <TextBlock Text="{DataBinding '$i18n.DeleteOperation'}"/>
                </StackPanel>
            </Button>
            
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2" Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="{DataBinding '$i18n.GenerateGCode'}" VerticalAlignment="Center"
                    Command="{Binding GenerateGCodeCommand}" Width="160"/>
            <Button Grid.Column="2" Content="{DataBinding '$i18n.SaveGCode'}" VerticalAlignment="Center"
                    Command="{Binding SaveGCodeCommand}"  Width="140"/>

        </Grid>
        <!-- Middle: operations list with fixed width -->
        <GroupBox Header="{DataBinding '$i18n.OperationsHeader'}"
                  Grid.Row="2" Grid.Column="1" Margin="0,0,4,0">
            <ListBox x:Name="OperationsList"
                     ItemsSource="{Binding AllOperations}"
                     SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                     MouseDoubleClick="OperationsList_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- Right: G-code preview with initial width ~250 and resizable -->
        <GroupBox Header="{DataBinding '$i18n.GCodePreviewHeader'}"
                  Grid.Row="2" Grid.Column="2">
            <TextBox Text="{Binding GCodePreview}" FontFamily="Consolas"
                     Style="{StaticResource MetroTextBox}"
                     Background="{DynamicResource ControlBackgroundBrush}"
                     Foreground="{DynamicResource TextBrush}"
                     BorderBrush="{DynamicResource TextBoxBorderBrush}"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     IsReadOnly="True"/>
        </GroupBox>

        <GridSplitter Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="2"
                      Background="Gray" Margin="0,2,0,2"/>
        <!-- Bottom: 2D preview of operations -->
        <views:OperationsPreviewView Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,8,0,0" DataContext="{Binding}"/>

        <!-- Preview button above TabControl -->
        <Button Command="{Binding PreviewGCodeCommand}"
                Grid.Row="4" Grid.Column="0" TabIndex="100"
                Margin="11,18,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Padding="7,5"
                ToolTip="{DataBinding '$i18n.PreviewGCode'}"
                ToolTipService.InitialShowDelay="0"
                ToolTipService.BetweenShowDelay="0"
                ToolTipService.ShowOnDisabled="True">
            <Grid>
                <Image Source="{StaticResource View3DImage}" Width="48" Height="48"/>
                <Label Content="3D" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="22"/>
            </Grid>
        </Button>

        <Button Content="{DataBinding '$i18n.ShowAll'}"
                Grid.Row="4" Grid.Column="2"
                TabIndex="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Padding="7,5"
                Command="{Binding ShowAllPreviewCommand}" Margin="0,18,11,0" />
    </Grid>
</Window>